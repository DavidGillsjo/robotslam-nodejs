extends ../layout

block content
  h1= title

  table.table.table-bordered
    thead
      tr
        th #
        th Map
        th Building
        th Collected At
        th
    tbody
      each m in measurements
        tr
          td= m.id
          td= m.map ? m.map.name : ''
          td= m.map && m.map.building ? m.map.building.name : ''
          td= m.created_at
          td
            a.btn.btn-outline-primary(href=`/measurements/${m.id}/export`) Export
