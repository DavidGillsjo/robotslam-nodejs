extends ../layout

block content
  h1= title

  table.table.table-bordered
    thead
      tr
        th #
        th # measurements
        th Collected At
        th
    tbody
      each m in measurements
        tr
          td= m.id
          td= m.items
          td= m.created_at
          td
            a.btn.btn-outline-primary(href=`/measurements/${m.id}/export`) Export

  #buttton
    if active
      a.btn.btn-primary(href='/toggle/stop') Stop
    else
      a.btn.btn-primary(href='/toggle/start') Start
